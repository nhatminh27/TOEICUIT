<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#aaffff00" />
             <gradient  android:angle="-90"
                 android:startColor="#eee0341e"
                 android:endColor="#eec53e2b"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#c53e2b" />
             <solid  android:color="#e0341e"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#aa0000ff" />
             <gradient  android:angle="-90"
                 android:startColor="#333300ff"
                 android:endColor="#33aa0055" />
         </shape>
     </item>
</selector>
